/* ask */
.ask {
  width: 100vw;
  overflow: hidden;
  height: 100vh;
  /* padding-bottom: 70rpx; */
  background-color: rgb(4, 138, 246);
}

.chat-area {
  position: relative;
  padding: 10rpx 0rpx;
  border: 2rpx solid rgb(241, 241, 241);
  margin: 20rpx auto 120rpx;
  overflow: hidden;
  width: 94%;
  background: #fff;
  box-shadow: 5rpx 10rpx 10rpx #ccc;
  border-radius: 20rpx;
}

.chat-title {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  border-bottom: 2rpx solid #ddd;
}

.ask-foot {
  box-shadow: 0 -1rpx 6rpx rgba(0, 0, 0, 0.1);
  border-top: 2rpx solid #ccc;
}

/* 左边导航条 */
