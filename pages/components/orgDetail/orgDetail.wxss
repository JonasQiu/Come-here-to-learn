.detail-back {
  border-bottom: 2rpx solid #ccc;
}

.chunk {
  border: 2rpx solid rgb(241, 241, 241);
  margin: 20rpx auto 40rpx;
  width: 92%;
  background: #fff;
  box-shadow: 15rpx 20rpx 20rpx #ccc;
  border-radius: 30rpx;
}

.detail-pro {
  position: relative;
  width: 100%;
  height: 400rpx;
  color: #fff;
  font-weight: 500;
  background-repeat: no-repeat;
  background-size: 100% 120%;
  display: flex;
  align-items: flex-end;
  padding: 20rpx 10rpx;
}

.detail-pro::before {
  position: absolute;
  left: 0;
  top: 0;
  content: "";
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
}

.detail-pro view {
  margin: 8rpx 0;
}

.detail-info-avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin: 20rpx;
  border: 4rpx solid #fff;
}

.info {
  z-index: 2;
  margin-bottom: 20rpx;
}

/* 关注 */
.tabbar {
  width: 100%;
  position: fixed;
  display: flex;
  bottom: 0;
  height: 90rpx;
  background-color: #fff;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  color: #666;
  font-weight: 600;
  letter-spacing: 2px;
  font-family: "Microsoft Yahei";
  border-top: 1rpx solid #ddd;
}

.w-50 {
  width: 50%;
}

.p-bottom {
  padding-bottom: 50rpx;
}