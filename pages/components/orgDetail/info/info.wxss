@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

.page {
  background-color: #e4f9f5;
  padding-bottom: 50rpx;
}

.chunk {
  border: 2rpx solid rgb(241, 241, 241);
  margin: 20rpx auto 40rpx;
  width: 92%;
  background: #fff;
  box-shadow: 15rpx 20rpx 20rpx #ccc;
  border-radius: 30rpx;
  overflow: hidden;
}

.orgDec {
  text-align: center;
  flex-direction: row;
  font-weight: bold;
  font-size: 34rpx;
  letter-spacing: 1px;
  font-family: "Microsoft Yahei";
}

/* 地图样式 */
.map-control-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: #F8F8F7;
  width: 100%;
  height: 100%;
}

.map-control-content {
  background: #FFF;
  padding: 20px 0 0;
  margin-top: 10px;
}

.map {
  width: 100%;
  height: 300rpx;
}

.feature-switch {
  line-height: 51px;
}

/* info信息 */
.info {
  width: 100%;
  padding-bottom: 40rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.border {
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #ccc;
}

.flex {
  /* padding-top: 30rpx; */
  display: flex;
  height: 80rpx;
  margin: 0rpx 20rpx;
  align-items: center;
  justify-content: space-between;
}

.pro {
  padding-top: 30rpx;
}

.p-top {
  padding: 5rpx 30rpx;
  line-height: 50rpx;
  color: #666;
  font-size: 30rpx;
  font-weight: 300;
  letter-spacing: 2px;
  font-family: "Microsoft Yahei";
  margin: 20rpx 0 0 0;
  text-indent: 2em;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  text-align: justify;
}

.image {
  width: 100%;
  height: 400rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.image-top {
  padding-top: 15rpx;
}

/* 讨论 */
.comment {
  padding: 30rpx 30rpx;
}

.commentTitle {
  font-size: 40rpx;
  font-weight: 800;
}

.commentNum {
  font-size: 30rpx;
  color: #333;
}

.commentChunk {
  display: flex;
  align-items: center;
  margin-top: 25rpx;
}

.inputComment {
  margin-left: 26rpx;
  opacity: 0.8;
  background-color: #ddd;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  width: calc(100% - 80rpx - 26rpx - 20rpx);
  border-radius: 50rpx;
}

.commentList {
  margin-top: 20rpx;
}

.listShow {
  margin: 50rpx 0;
  display: flex;
}

.info {
  width: calc(100% - 80rpx - 26rpx - 20rpx);
  margin-left: 26rpx;
  font-weight: 500;
  position: relative;
}

.info-comment {
  width: calc(100% - 80rpx - 26rpx - 20rpx);
  margin-left: 26rpx;
  font-weight: 500;
  position: relative;
  display: flex;
  flex-direction: column;
}

.info-name {
  line-height: 50rpx;
  font-size: 34rpx;
  font-weight: bold;
  letter-spacing: 2px;
  font-family: "Microsoft Yahei";
  color: #666;
}

.info-time {
  font-weight: 200;
  /* letter-spacing: 2px; */
  font-family: "Microsoft Yahei";
  color: #666;
  font-size: 20rpx;
}

.info-call {
  position: absolute;
  right: 0;
  top: 14rpx;
  font-size: 38rpx !important;
  font-weight: 200;
  letter-spacing: 2px;
  font-family: "Microsoft Yahei";
  color: #666;
}

.appNum {
  font-size: 28rpx;
}

.info-content {
  margin-top: 25rpx;
  font-weight: 200;
  letter-spacing: 2px;
  font-family: "Microsoft Yahei";
  color: #666;
}

.avatar-comment {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  box-shadow: 10rpx 10rpx 30rpx #ccc;
}