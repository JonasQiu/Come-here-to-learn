.teacher {
  display: flex;
  background-color: #ffffff;
  color: #000;
  padding: 30rpx 20rpx;
  border-bottom: 2rpx solid #ddd;
}

.chunk {
  border: 2rpx solid rgb(241, 241, 241);
  margin: 20rpx auto 40rpx;
  width: 92%;
  background: #fff;
  box-shadow: 15rpx 20rpx 20rpx #ccc;
  border-radius: 30rpx;
  overflow: hidden;
  padding: 30rpx;
}

.cover_picurl {
  width: 170rpx;
  height: 200rpx;
}

.info {
  padding-left: 30rpx;
  width: 570rpx;
}

.name {
  padding-bottom: 10rpx;
  font-size: 31rpx;
  color: #666;
  font-weight: 600;
  letter-spacing: 2px;
  font-family: "Microsoft Yahei";
}

.showNum {
  font-size: 24rpx;
  color: #666;
  font-weight: 300;
  letter-spacing: 1px;
  font-family: "Microsoft Yahei";
}

.b-right {
  padding-right: 10rpx;
  margin-right: 10rpx;
  border-right: 2rpx solid #ddd;
}

.pro {
  padding-top: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  line-height: 40rpx;
  color: #666;
  font-size: 25rpx;
  font-weight: 300;
  letter-spacing: 2px;
  font-family: "Microsoft Yahei";
  text-indent: 2em;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  text-align: justify;
}