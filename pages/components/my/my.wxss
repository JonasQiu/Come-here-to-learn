@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

/* my样式 */
.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  font-size: 36rpx;
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: -1rpx;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  width: 750rpx;
  height: 300rpx;
}

.UCenter-bg {
  padding-top: 0;
  height: 450rpx;
}

.m-10 {
  margin-top: -32rpx;
  font-size: 30rpx;
}

.png {
  border-radius: 50%;
}

.padding-40 {
  padding-top: 50rpx;
}

/* 宫格列表样式 */
.contain_box {
  background-color: white;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  /* overflow: hidden; */
  border-radius: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding: 40rpx 30rpx 20rpx;
  box-shadow: 5rpx 5rpx 10rpx #ccc
}

.fun_box {
  display: flex;
  width: 24%;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
  padding-top: 10rpx;
}

.fun_box_icon {
  height: 60rpx;
  width: 60rpx;
  font-size: 60rpx;
  text-align: center;
  margin-bottom: 10rpx;
}

.txt_1 {
  color: #666;
  letter-spacing: 1px;
  font-family: "Microsoft Yahei";
  font-size: 28rpx;
  text-align: center;
  font-weight: 500;
  margin: 10rpx;
}

.orther {
