@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";
@import "/colorui/animation.wxss";

/* 无搜索内容时的展示 */
.noContent {
  color: #000;
  /* padding: 0 20rpx; */
  margin-top: 25rpx;
  font-size: 28rpx;
}

/* 热搜 */
.hot {
  width: 100%;
  padding: 20rpx 20rpx 10rpx;
  margin-bottom: 20rpx;
}

.search-title {
  font-size: 32rpx;
  font-weight: 600;
}

.hotContent {
  padding-top: 15rpx;
  display: flex;
  flex-wrap: wrap;
}

.hotItem {
  width: 50%;
  margin: 10rpx 0;
}

.color999 {
  color: #999;
}

.margin-15 {
  margin-left: 15rpx;
}

.hotText::after {
  content: '热';
  width: 15rpx;
  height: 15rpx;
  font-size: 20rpx;
  color: #fff;
  padding: 5rpx;
  margin-left: 10rpx;
  line-height: 15rpx;
  background-color: rgb(247, 182, 61);
}

.newText::after {
  content: '新';
  width: 15rpx;
  height: 15rpx;
  font-size: 20rpx;
  color: #fff;
  padding: 5rpx;
  margin-left: 10rpx;
  line-height: 15rpx;
  background-color: rgb(247, 52, 159);
}

/* 搜索历史 */
.history {
  width: 100%;
  padding: 20rpx 20rpx 10rpx;
  margin-bottom: 40rpx;
}

.padding-top {
  padding-top: 15rpx;
  display: flex;
  flex-wrap: wrap;
}

.historyContent {
  padding: 10rpx 15rpx;
  margin-right: 10px;
  margin-bottom: 15rpx;
  background-color: rgba(0, 0, 0, .1);
  border-radius: 6rpx;
}

/* 清除搜索历史 */
.clearHistory {
  color: #aaa;
  margin: 0 auto;
  width: 220rpx;
}

/* 有搜索内容 */
.b-color {
  height: 100vh;
  background-color: #e4f9f5;
}

/* 导航栏 */
.nav .cu-item {
  height: 60rpx;
  display: inline-block;
  line-height: 60rpx;
  margin: 0 10rpx 20rpx;
  padding: 0 20rpx;
}

/* 内容 */
.content {
  padding: 20rpx;
  padding-top: 15rpx;
  margin-bottom: 100rpx;
}

.item {
  padding: 30rpx 0rpx;
  height: 290rpx;
  display: flex;

  border: 2rpx solid rgb(241, 241, 241);
  margin: 0 auto 40rpx;
  width: 96%;
  background: #fff;
  box-shadow: 15rpx 20rpx 20rpx #ccc;
  border-radius: 50rpx;
}

.item-img {
  margin-left: 15rpx;
  width: 230rpx;
  height: 100%;
  border-radius: 50%;
}

.info {
  margin-left: 25rpx;
  width: 390rpx;
  color: #aaa;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.info-content {
  font-size: 34rpx;
  color: #000;
  text-overflow: ellipsis;
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  font-weight: bold;
  letter-spacing: 1px;
  font-family: "Microsoft Yahei";
}

.text-size {
  font-size: 38rpx;
}

.userName {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;

  display: -webkit-box;
  color: #666;
  font-size: 25rpx;
  font-weight: 300;
  letter-spacing: 2px;
  font-family: "Microsoft Yahei";
  text-indent: 1em;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
}